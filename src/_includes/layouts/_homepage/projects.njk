<ul class="projects" id="work">
  {% for project in projects %}
  <li>
    <div class="image-container">
      <img src="{{ project.image }}" srcset="{{ project.imageSrcset }}" sizes="(min-width: 721px) 50vw, 100vw" alt="{{ project.title }}" loading="lazy" width="1280" height="840" />
    </div>
    <div class="text-container">
      <h3>{{ project.title }}</h3>
      <p>{{ project.description }}</p>
      <a href="{{ project.url }}" target="_blank" rel="noopener noreferrer">
        View Project
      </a>
    </div>
  </li>
  {% endfor %}
</ul>